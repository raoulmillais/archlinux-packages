# Maintainer: Raoul Millais <raoul@raoulmillais.com>
pkgname=raoulmillais-base
pkgver=0.0.1
pkgrel=1
pkgdesc="Base system configuration for raoulmillais systems"
groups=('raoulmillais')
arch=('any')
url="https://github.com/raoulmillais/archlinux-packages"
license=('MIT')

install=raoulmillais-base.install

depends=(
  'base'
  'linux'
  'linux-firmware'
  'aurutils'
  'bat'
  'bind-tools' # dig etc
  'coreutils'
  'curl'
  'dos2unix'
  'e2fsprogs' # ext4 tools
  'efibootmgr'
  'filesystem'
  'fzf'
  'git'
  'grub'
  'htop'
  'hub'
  'iotop'
  'lsof'
  'man-db'
  'man-pages'
  'networkmanager'
  'openssh'
  'rsync'
  'shellcheck'
  'the_silver_searcher'
  'tmux'
  'vifm'
  'vim'
  'wget'
  'zsh'
)

# base-devel
depends+=(
  'autoconf'
  'automake'
  'binutils'
  'bison'
  'fakeroot'
  'file'
  'findutils'
  'flex'
  'gawk'
  'gcc'
  'gettext'
  'grep'
  'groff'
  'gzip'
  'libtool'
  'm4'
  'make'
  'pacman'
  'patch'
  'pkgconf'
  'sed'
  'sudo'
  'texinfo'
  'which'
)

rootdir=$PWD

package() {
    cp -a "$rootdir/files/"* "$pkgdir"
    chmod -R 0750 "$pkgdir/etc/sudoers.d"
}
